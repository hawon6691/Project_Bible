{
  "name": "nestshop",
  "version": "0.0.1",
  "description": "Danawa-style price comparison shopping mall API",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:rate-limit": "jest --config ./test/jest-e2e.json test/e2e/rate-limit-regression.e2e-spec.ts --runInBand",
    "test:e2e:admin-boundary": "jest --config ./test/jest-e2e.json test/e2e/admin-authorization-boundary.e2e-spec.ts --runInBand",
    "test:e2e:contract": "jest --config ./test/jest-e2e.json test/e2e/contract-public-api.e2e-spec.ts --runInBand",
    "test:e2e:critical": "jest --config ./test/jest-e2e.json test/e2e/auth-search.e2e-spec.ts test/e2e/public-api.e2e-spec.ts test/e2e/admin-platform.e2e-spec.ts test/e2e/queue-admin.e2e-spec.ts test/e2e/ops-dashboard.e2e-spec.ts test/e2e/ops-dashboard-resilience.e2e-spec.ts test/e2e/ops-dashboard-thresholds.e2e-spec.ts --runInBand",
    "test:e2e:dependency-failure": "jest --config ./test/jest-e2e.json test/e2e/ops-dashboard-dependency-failures.e2e-spec.ts --runInBand",
    "test:e2e:ops": "jest --config ./test/jest-e2e.json test/e2e/admin-platform.e2e-spec.ts test/e2e/queue-admin.e2e-spec.ts test/e2e/ops-dashboard.e2e-spec.ts test/e2e/ops-dashboard-resilience.e2e-spec.ts test/e2e/ops-dashboard-thresholds.e2e-spec.ts --runInBand",
    "test:e2e:critical:stability": "node -e \"require('fs').mkdirSync('test-results',{recursive:true})\" && npm run test:e2e:critical -- --json --outputFile=test-results/critical-run-1.json && npm run test:e2e:critical -- --json --outputFile=test-results/critical-run-2.json && node test/scripts/analyze-stability.js",
    "test:security:regression": "jest --config ./test/jest-e2e.json test/e2e/security-regression.e2e-spec.ts --runInBand",
    "test:migration:validate": "node test/scripts/validate-migrations.js",
    "test:migration:roundtrip": "node test/scripts/migration-roundtrip.js",
    "test:smoke:live": "node test/scripts/live-smoke.js",
    "test:release:gate": "npm run lint:check && npx tsc -p tsconfig.json --noEmit --incremental false && npm run build && npm run test:migration:validate && npm run test:security:regression && npm run test:e2e:contract && npm run test:e2e:critical && npm run test:e2e:ops",
    "test:release:gate:report": "node -e \"require('fs').mkdirSync('test-results',{recursive:true})\" && npm run lint:check && npx tsc -p tsconfig.json --noEmit --incremental false && npm run build && npm run test:migration:validate && npm run test:security:regression && npm run test:e2e:contract -- --json --outputFile=test-results/release-gate-contract.json && npm run test:e2e:critical -- --json --outputFile=test-results/release-gate-e2e-critical.json && npm run test:e2e:ops -- --json --outputFile=test-results/release-gate-e2e-ops.json",
    "test:perf:mock-server": "ts-node test/performance/mock-perf-server.ts",
    "test:perf:search-ranking": "k6 run test/performance/search-ranking.perf.js",
    "test:perf:price": "k6 run test/performance/price-compare.perf.js",
    "test:perf:smoke": "k6 run test/performance/smoke.perf.js",
    "test:perf:soak": "k6 run test/performance/soak.perf.js",
    "test:perf:spike": "k6 run test/performance/spike-search.perf.js",
    "test:perf:assert": "node test/performance/assert-summary.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- -d src/database/data-source.ts migration:generate src/database/migrations/AutoMigration",
    "migration:run": "npm run typeorm -- -d src/database/data-source.ts migration:run",
    "migration:revert": "npm run typeorm -- -d src/database/data-source.ts migration:revert"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.988.0",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.13",
    "@nestjs/elasticsearch": "^11.1.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.13",
    "@nestjs/platform-socket.io": "^11.1.13",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.13",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.9.2",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-kakao": "^1.0.1",
    "passport-naver-v2": "^2.0.8",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.13",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.9",
    "@types/passport-facebook": "^3.0.4",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
