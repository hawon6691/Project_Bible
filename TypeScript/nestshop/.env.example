# ──────────────────────────────────────
# Application
# ──────────────────────────────────────
NODE_ENV=development
APP_PORT=3000
APP_ENV=development
API_PREFIX=api/v1

# ──────────────────────────────────────
# Database (PostgreSQL)
# ──────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nestshop
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ──────────────────────────────────────
# JWT
# ──────────────────────────────────────
JWT_ACCESS_SECRET=your-access-secret-key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRATION=7d

# ──────────────────────────────────────
# Redis
# ──────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ──────────────────────────────────────
# Elasticsearch
# ──────────────────────────────────────
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ──────────────────────────────────────
# Mail (SMTP / Nodemailer)
# ──────────────────────────────────────
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM="NestShop <noreply@nestshop.com>"

# ──────────────────────────────────────
# AWS S3
# ──────────────────────────────────────
AWS_S3_REGION=ap-northeast-2
AWS_S3_BUCKET=nestshop-uploads
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ──────────────────────────────────────
# OAuth 2.0 Social Login
# ──────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_CALLBACK_URL=http://localhost:3000/api/v1/auth/kakao/callback

NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_CALLBACK_URL=http://localhost:3000/api/v1/auth/naver/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_CALLBACK_URL=http://localhost:3000/api/v1/auth/instagram/callback

# ──────────────────────────────────────
# Web Push (VAPID)
# ──────────────────────────────────────
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@nestshop.com

# ──────────────────────────────────────
# Bull Queue (Redis 기반)
# ──────────────────────────────────────
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
# BULL_REDIS_PASSWORD는 별도 사용하지 않고 REDIS_PASSWORD를 재사용합니다.

# ──────────────────────────────────────
# FFmpeg (Shortform Transcoding)
# ──────────────────────────────────────
FFMPEG_BIN=ffmpeg
FFMPEG_PRESET=veryfast
FFMPEG_CRF=28

# ──────────────────────────────────────
# OAuth Redirect
# ──────────────────────────────────────
# 소셜 로그인 콜백 후 프론트로 되돌릴 기본 URL (미설정 시 내부 fallback 사용)
SOCIAL_REDIRECT_URI=http://localhost:3000/auth/callback

# ──────────────────────────────────────
# WebSocket
# ──────────────────────────────────────
WS_CORS_ORIGIN=*

# ──────────────────────────────────────
# Mock / Test Flags
# ──────────────────────────────────────
# true일 경우 모의 결제 게이트웨이를 강제 실패시킵니다.
PAYMENT_GATEWAY_FORCE_FAIL=false
